<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gitlab.aakumykov.simple_list_view_driver.MainActivity">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/scrollToNewItemsSwitch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:text="@string/scroll_to_new_items"
        android:background="#eee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#B39DDB"
        app:backgroundTint="#B39DDB"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/add_item"
        app:icon="@drawable/ic_add"
        app:fabSize="mini"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@id/addWithScrollButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_add" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/addWithScrollButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#29B6F6"
        app:backgroundTint="#29B6F6"
        android:clickable="true"
        android:focusable="true"
        app:fabSize="mini"
        android:textSize="11sp"
        android:text="@string/add_item_with_scroll"
        app:icon="@drawable/ic_add_with_scroll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_add_with_scroll" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollToNewItemsSwitch">

    </ListView>
</androidx.constraintlayout.widget.ConstraintLayout>